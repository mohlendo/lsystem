<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/halo"
			   xmlns:lsystem="lsystem.*">
	<s:layout>
		<s:HorizontalLayout/>
	</s:layout>
	<s:VGroup id="controlPanel"
			  width="250"
			  height="100%">
		<s:HGroup>
			<s:SimpleText text="Angle:"
						  fontWeight="bold"/>
			<s:TextInput id="angle"
						 text="27"/>
		</s:HGroup>

		<s:HGroup>
			<s:SimpleText text="Order:"
						  fontWeight="bold"/>
			<s:TextInput id="order"
						 text="6"/>
		</s:HGroup>
		<s:HGroup>
			<s:SimpleText text="Rules:"
						  fontWeight="bold"/>
			<s:TextArea id="source">
				<s:text>
					<fx:String>X -> F-[[X]+X]+F[+FX]-X
				F -> FF</fx:String>
				</s:text>
			</s:TextArea>

		</s:HGroup>
		<s:Button label="Draw"
				  click="lsystemView.draw()"/>
	</s:VGroup>

	<lsystem:LSystemView id="lsystemView"
						 source="{source.text}"
						 angle="{Number(angle.text)}"
						 order="{Number(order.text)}"
						 width="100%"
						 height="100%"/>
</s:Application>
